<h1>New Driver</h1>
	<%= flash[:notice] %>
<div style="width: 70%;margin: auto; margin-top: inherit; padding-top: 30px;">
<%= form_with model: Driver.new do |form| %>

 <div class="form-group">
    <%= form.label :name  %><br>
    <%= form.text_field :name,class: 'form-control' %>
    <% @driver.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.email_field :email,class: 'form-control' %>
        <% @driver.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

 <div class="form-group" style='padding-bottom:20px'>
    <%= form.label :birth %><br>
<%= form.date_field :birth,class: 'form-control datepicker' %>
  </div>

  <div class="form-group">
    <%= form.submit  'Submit' , :class=>'btn btn-primary'%>
  </div>
<% end %>

</div>
