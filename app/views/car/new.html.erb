<h1>New Car</h1>

<%= form_with model: @car do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @car.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :type %><br>
    <%= form.text_area :type %>
  </div>

  <div>
    <%= form.label :colorID %><br>
<%= form.select :colorID, [["blue",1], ["yellow",2], ["red",3]] %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>