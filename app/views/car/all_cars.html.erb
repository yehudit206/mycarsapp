<h1>Cars</h1>

<div id=container>
<table class="table table-striped table-hover">


<thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">title</th>
      <th scope="col">type</th>
      <th scope="col">color</th>
    </tr>
  </thead>
  <tbody>
<% @cars.each do |car| %>
    <tr class='clickable-row' data-href="<%= car_path(car) %>">
      <th scope="row"><%= car.id %></th>
      <td><%= car.title %></td>
      <td>
       <%= car.type_car %> 
      </td>
      <td><%= car.color %></td>
    </tr>
  

  <% end %>
</table>
</div>
 <a href="car/new">
       New Car
      </a>
